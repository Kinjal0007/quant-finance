# GCP Configuration
GCP_PROJECT=your-project-id
GCP_REGION=europe-west3

# Database Configuration (PostgreSQL for production, SQLite for local)
USE_SQLITE=true  # Set to false for PostgreSQL
DATABASE_URL=postgresql://user:password@host:port/database

# For local development with SQLite
USE_FIXTURE=true  # Use demo data instead of vendor APIs

# Vendor API Keys (only needed when USE_FIXTURE=false)
EODHD_API_KEY=your-eodhd-api-key
TWELVE_DATA_API_KEY=your-twelve-data-api-key

# BigQuery Configuration
BQ_DATASET_RAW=market_raw
BQ_DATASET_CURATED=market_curated

# Cloud Storage
QFP_ARTIFACTS_BUCKET=your-artifacts-bucket

# Frontend Origin (for CORS)
FRONTEND_ORIGIN=http://localhost:3000

# Default Settings
DEFAULT_VENDOR=eodhd
DEFAULT_INTERVAL=1d
